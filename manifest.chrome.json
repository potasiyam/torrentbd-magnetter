{
  "manifest_version": 3,
  "name": "TorrentBD Magnetter",
  "version": "2.0.0",
  "description": "Adds magnets for TorrentBD.",
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.torrentbd.com/*",
        "*://*.torrentbd.net/*",
        "*://*.torrentbd.org/*"
      ],
      "js": [
        "torrent-converter.js",
        "core.js"
      ]
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.torrentbd.com/*",
    "*://*.torrentbd.net/*",
    "*://*.torrentbd.org/*"
  ]
}
