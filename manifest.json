{
  "manifest_version": 2,
  "name": "TorrentBD Magnetter",
  "version": "2.0.2",
  "description": "Adds magnets for TorrentBD.",
  "icons": {
    "32": "icons/magnet-clean.svg",
    "48": "icons/magnet-clean.svg",
    "96": "icons/magnet-clean.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.torrentbd.com/*",
        "*://*.torrentbd.net/*",
        "*://*.torrentbd.org/*"
      ],
      "js": [
        "torrent-converter.js",
        "core.js"
      ]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "options.html",
    "default_icon": {
      "32": "icons/magnet-clean.svg",
      "48": "icons/magnet-clean.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "potasiyam@gmail.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage"
  ]
}
