{

  "manifest_version": 2,
  "name": "TorrentBD Magnetter",
  "version": "1.0.2",

  "description": "Adds magnets for TorrentBD.",

  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.torrentbd.com/*",
        "*://*.torrentbd.net/*",
        "*://*.torrentbd.org/*"
      ],
      "js": ["torrent-converter.js", "core.js"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "options.html",
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },

  "applications": {
    "gecko": {
      "id": "potasyam@mozilla.org"
    }
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"]

}
